<!-- RESERVE A CONFERENCE ROOM ================= -->
<div class="col-md-12">
    <h1>Reserve a Conference Room</h1>
</div>
<!-- TOP CARD ROW - FIRST TWO CONFERENCE ROOMS ============================== -->
<div class="col-lg-12">
    <div class="top-card-row row">

        <!-- Top Row ------------------------------------------->
        <div class="card col-lg-6 " style="width:400px">
            <img class="card-img-top" src="/assets/img/fwc.jpg" alt="Card image">
            <div class="card-body">
                <h4 class="card-title">FWC Conference Room </h4>

                <form class="reservation-form" method="post">
                    <p>Username</p>
                    <input type="text" id="username" name="username">
                    <p>Description</p>
                    <input type="text" id="description" name="description">
                    <label for="time">Choose an Available Slot Time:</label>
                    <select name="time" id="time">
                        <option value="8-9">8AM-9AM</option>
                        <option value="9-10">9AM-10AM</option>
                        <option value="10-11">10AM-11AM</option>
                        <option value="11-12">11AM-12PM</option>
                        <option value="12-1">12PM-1PM</option>
                        <option value="1-2">1PM-2PM</option>
                        <option value="2-3">2PM-3PM</option>
                        <option value="3-4">3PM-4PM</option>
                        <option value="4-5">4PM-5PM</option>
                    </select>
                    <br></br>
                    <button class="button" id="subres-btn">Submit Reservation</button>
                </form>
            </div>
            <h3> Reservations </h3>
            {{#each userreservations}}
            <div class="card">
                <div class="container">
                    <h2>{{this.username}}</h2>
                    <h4>{{this.description}}</h4>
                    <h3>
                        <p>{{this.time}}</p>
                    </h3>
                    <button style="float: right;" class="button small alert delete-reservation"
                        data-id="{{this.id}}">DELETE</button>
                </div>
            </div>
            <br />
            {{/each}}
        </div>
        <div class="card col-sm-6" style="width:400px">
            <img class="card-img-top" src="/assets/img/DeadOrbit.jpg" alt="Card image">
            <div class="card-body">
                <h4 class="card-title">Dead Orbit Conference Room</h4>
                <form>
                    <p>Username</p>

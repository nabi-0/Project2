{{#each userpost}}
<div class="card">
    <div class="container">
        <h3>{{this.title}}</h3>-<small>{{this.createdAt}}</small>

        <h4>
            <p>"{{this.post}}"</p>
        </h4>
        <button style="float: right;" class="button small alert delete-post" data-id="{{this.id}}">DELETE</button>
    </div>
</div>
<br />
{{/each}}


